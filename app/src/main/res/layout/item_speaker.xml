<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="@dimen/cardElevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBannerItemHome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightImageHome"
            android:background="@drawable/platzi_conf_3"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvTituloItemHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Nombre expositor"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sizeTitulo"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvParrafoItemHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Trabajo expositor"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sizeSubTitulo" />

    </LinearLayout>

</androidx.cardview.widget.CardView>